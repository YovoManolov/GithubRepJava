
public class ArraysUnderstandingTest {

	public static void main(String[] args) {
		int IntArray [] = new int [50]  , i ;
		
		for(i=0; i < 50 ; i++){
			IntArray[i] = (50 - i);
		}
		
	    i = 0; 
		while (i < 50){
			System.out.println("This is index :  " + i + "and the number is : " + IntArray[i]);
			i++;
		}
	}

}
