<?xml version="1.0" encoding="utf-8"?>

<RelativeLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical">

    <fragment
        android:id="@+id/map"
        class="com.google.android.gms.maps.SupportMapFragment"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_alignParentStart="true"
        android:layout_alignParentTop="true" />
    <Button
        android:id="@+id/zoomIN"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentBottom="true"
        android:layout_alignParentStart="true"
        android:background="#359c5e"
        android:padding="8dp"
        android:text="+"
        android:textColor="#ffffff" />
    <Button
        android:id="@+id/zoomOUT"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentBottom="true"
        android:layout_alignParentEnd="true"
        android:background="#359c5e"
        android:padding="8dp"
        android:text="-"
        android:textColor="#ffffff" />
    <Button
        android:id="@+id/hybridBUT"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentStart="true"
        android:layout_alignParentTop="true"
        android:background="#359c5e"
        android:padding="8dp"
        android:text="HYBRID"
        android:textColor="#ffffff" />
    <Button
        android:id="@+id/normalBUT"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentStart="true"
        android:layout_below="@+id/hybridBUT"
        android:background="#359c5e"
        android:padding="8dp"
        android:text="NORMAL"
        android:textColor="#ffffff" />
    <Button
        android:id="@+id/satelliteBUT"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentStart="true"
        android:layout_below="@+id/normalBUT"
        android:background="#359c5e"
        android:padding="8dp"
        android:text="SATELLITE"
        android:textColor="#ffffff" />
    <Button
        android:id="@+id/terrainBUT"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentStart="true"
        android:layout_below="@+id/satelliteBUT"
        android:background="#359c5e"
        android:padding="8dp"
        android:text="TERRAIN"
        android:textColor="#ffffff" />
    <Button
        android:id="@+id/tusBUT"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentEnd="true"
        android:layout_alignParentTop="true"
        android:background="#359c5e"
        android:padding="8dp"
        android:text="TU Sofia"
        android:textColor="#ffffff" />
    <Button
        android:id="@+id/BACK"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentBottom="true"
        android:layout_centerHorizontal="true"
        android:background="#359c5e"
        android:padding="8dp"
        android:text="Back"
        android:textColor="#ffffff" />
</RelativeLayout>